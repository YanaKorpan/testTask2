{
  "name": "tagsCounter",
  "description": "Расширение для подсчета количества тегов на текущей странице",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/tag16.png",
      "32": "img/tag32.png",
      "48": "img/tag48.png",
      "128": "img/tag128.png"
    }
  },
  "icons": {
    "16": "img/tag16.png",
    "32": "img/tag32.png",
    "48": "img/tag48.png",
    "128": "img/tag128.png"
  },
  "permissions": [
    "tabs", "<all_urls>"
  ]
}